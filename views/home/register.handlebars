<script>

    $('#registerForm').on('submit',function(){
        return false;
        var formData = $(this).serializeToJson();
        $.ajax({
            type:'post',
            data:formData,
            url:'/home/register',
            success:function(response){
                if(response.success){
                    location.href = '/home/login';
                }else{
                    alert(response.message);
                }
            }
        })
    })


</script>