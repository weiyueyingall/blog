
    <div class="viewport">
        <!-- 头部 -->
        {{> home/header}}
        <!-- 主体 -->
        <div class="body">
            <!-- 登录 -->
            <div class="login">
                <div class="wrapper">
                    <div class="contact">
                        <p>有什么问题可以点击下方联系</p>
                        <img src="./images/email.png" alt="">
                    </div>
                    <form id="loginForm">
                        <ul>
                            <li>
                                <label for="">邮　箱:</label>
                                <input type="email" name="email">
                            </li>
                            <li>
                                <label for="">密　码:</label>
                                <input type="password" name="pass">
                            </li>
                            <li>
                                <label for=""></label>
                                <input type="submit" value="登 录">
                                <a href="javascript:;">忘记密码？</a>
                            </li>
                        </ul>
                    </form>
                </div>
            </div>
        </div>
        <!-- 底部 -->
        {{> home/footer}}
    </div>
<script>
    $('#loginForm').on('submit',function(){
       
        var formData = $(this).serializeToJson();
        $.ajax({
            url:'/home/login',
            type:'post',
            data:formData,
            success:function(response){
                if(response.success){
                    location.href='/admin/index';
                }else{
                    alert(response.message)
                }
            }
        })
         return false;
    })


</script>